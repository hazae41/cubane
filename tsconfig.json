{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "paths": {
      "mods/*": [
        "mods/*"
      ],
      "libs/*": [
        "libs/*"
      ],
      "tests/*": [
        "tests/*"
      ],
    }
  },
  "include": [
    "./src/**/**.ts"
  ]
}